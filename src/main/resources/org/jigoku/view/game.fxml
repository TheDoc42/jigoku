<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.TextFlow?>


<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.jigoku.view.GameController">
   <children>
      <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0">
      	<children>
      		<TextFlow fx:id="display" prefHeight="200.0" prefWidth="200.0" />
      		<TextField fx:id="textInput">
      			<padding>
      				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      			</padding>
      			<VBox.margin>
      				<Insets left="10.0" top="10.0" />
      			</VBox.margin>
      		</TextField>
      		<Label text="Progress">
      			<VBox.margin>
      				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      			</VBox.margin>
      		</Label>
      		<ProgressBar fx:id="progressBar" prefHeight="18.0" prefWidth="638.0" progress="0.0">
      			<VBox.margin>
      				<Insets bottom="10.0" top="10.0" />
      			</VBox.margin>
      		</ProgressBar>
      		<GridPane>
      			<columnConstraints>
      				<ColumnConstraints hgrow="SOMETIMES" maxWidth="285.0" minWidth="10.0" prefWidth="140.0" />
      				<ColumnConstraints hgrow="SOMETIMES" maxWidth="443.0" minWidth="10.0" prefWidth="440.0" />
      			</columnConstraints>
      			<rowConstraints>
      				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      				<RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
      			</rowConstraints>
      			<children>
      				<CheckBox fx:id="showHint" mnemonicParsing="false" text="Show hint" />
      				<CheckBox fx:id="showTranslation" mnemonicParsing="false" text="Show translation" GridPane.rowIndex="1" />
      				<Label fx:id="hintLabel" text="HintLabel" GridPane.columnIndex="1" />
      				<Label fx:id="translationLabel" text="Translation Label" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      			</children>
      		</GridPane>
      	</children>
      	<padding>
      		<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      	</padding>
      </VBox>
   </children>
</AnchorPane>
